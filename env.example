### Session Router - environment example
# Copy to .env and adjust as needed

# Router
QUEUE_INCOMING=router.incoming
EXCHANGE_WORKER=worker.incoming
SESSION_ID_FIELD=session_id
HEARTBEAT_KEY_PRX=heartbeat:
RETRY_TTL_MS=15000
SESSION_TTL_MS=60000
PROCS_POOL_SIZE=10
HEALTH_CHECK_PORT=8080
LOG_LEVEL=debug

# RabbitMQ
RABBITMQ_TLS=true
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5671
RABBITMQ_VHOST=/
# Auth: external (client cert) | plain (user/pass). If unset, auto-detect.
RABBITMQ_AUTH=external
# Non-TLS credentials (only when RABBITMQ_TLS=false)
# RABBITMQ_USERNAME=guest
# RABBITMQ_PASSWORD=guest
# Alternatively use a full URL (leave unset if using split settings)
# RABBITMQ_URL=amqps://rabbitmq:5671/
# TLS settings (used when RABBITMQ_TLS=true)
TLS_VERIFY=false
TLS_CA_CERT=/etc/ssl/certs/ca_certificate.pem
TLS_CLIENT_CERT=/etc/ssl/certs/client_certificate.pem
TLS_CLIENT_KEY=/etc/ssl/certs/client_key.pem

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
